{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Krash",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.double-slash.xs",
				"match": "//.*"
			},
			{
				"name": "comment.line.double-slash.xs",
				"begin": "/\\*",
				"end": "\\*/"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.krash",
				"match": "\\b(false|null|true)\\b"
			},
			{
				"name": "constant.numeric.krash",
				"match": "\\b-?[0-9]+(?:\\.[0-9]+)?\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.krash",
				"match": "\\b(else|fun|if|return|while)\\b"
			},
			{
				"name": "keyword.other.xs",
				"match": "(!|&)"
			}]
		},
		"strings": {
			"name": "string.quoted.double.krash",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.krash",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.krash"
}